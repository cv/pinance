{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**/src/**/*.ts", "**/*.json", "!**/node_modules", "!**/dist", "!**/coverage"]
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {},
			"correctness": {
				"noNodejsModules": "off"
			},
			"performance": {
				"noBarrelFile": "off"
			},
			"style": {
				"noDefaultExport": "off",
				"useNamingConvention": {
					"level": "error",
					"options": {
						"strictCase": false,
						"conventions": [
							{
								"selector": { "kind": "variable" },
								"formats": ["camelCase", "CONSTANT_CASE", "PascalCase"]
							},
							{
								"selector": { "kind": "function" },
								"formats": ["camelCase", "PascalCase"]
							},
							{
								"selector": { "kind": "typeLike" },
								"formats": ["PascalCase"]
							},
							{
								"selector": { "kind": "objectLiteralProperty" },
								"formats": ["camelCase", "snake_case", "CONSTANT_CASE"]
							},
							{
								"selector": { "kind": "typeProperty" },
								"formats": ["camelCase", "snake_case"]
							}
						]
					}
				},
				"noProcessEnv": "off"
			},
			"security": {
				"noSecrets": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	}
}
